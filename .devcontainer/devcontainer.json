{
  "name": "Pruva Reproduction Environment",
  "image": "ghcr.io/n3mes1s/pruva-sandbox:latest",
  "postCreateCommand": "[ -n \"$REPRO_ID\" ] && pruva-verify \"$REPRO_ID\" || echo 'Welcome to Pruva Sandbox! Run: pruva-verify <REPRO-ID>'",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    },
    "codespaces": {
      "openFiles": []
    }
  },
  "remoteUser": "vscode",
  "containerEnv": {
    "PRUVA_SANDBOX": "true",
    "PRUVA_API_URL": "https://pruva-api-production.up.railway.app/v1",
    "REPRO_ID": "REPRO-2026-00099"
  }
}
